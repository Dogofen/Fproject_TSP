							"\n"
							"				select the action you would like:\n"
							"\n"
							"						1.read about this application\n"
							"						2.view maps\n"
							"						3.calculate path\n"
							"					-->	4.exit\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n"	);
}
void MainMenu()
{
	int i=0;
	int num=0;
	Menu1();
	while (i<1)
		{
			while( ((IORD_ALTERA_AVALON_PIO_DATA(PIO_0_BASE) & 0x07) == 0x07) );

				if( !((IORD_ALTERA_AVALON_PIO_DATA(PIO_0_BASE) & 0x01) == 0x01))
				{
					num=(num+1)%4;
					MAN(num);
				}
				if( !((IORD_ALTERA_AVALON_PIO_DATA(PIO_0_BASE) & 0x02) == 0x02))
				{
					num=(num+3)%4;
					MAN(num);
				}
				if( !((IORD_ALTERA_AVALON_PIO_DATA(PIO_0_BASE) & 0x04) == 0x04))
				{
					switch(num)
					{
						case 0:
							//fprintf(pf,"100\n");
							break;
						default:
							printf("h");
							break;
					}
				}
			usleep(600*1000);

			++i;
		}
}
int main()
{
	FILE* pf;
	pf= fopen("/mnt/host/inbox.log","w");
	MainMenu();


	fclose(pf);
	printf("\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n"
			"BYE BYE\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n");
  return 0;
}
