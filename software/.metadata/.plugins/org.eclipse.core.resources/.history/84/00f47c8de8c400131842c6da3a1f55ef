#include <stdio.h>
#include <stdlib.h>

int* Crdist()
{
	FILE* btd;
	int size;
	int* dist;

	btd = fopen("/mnt/host/inbox.txt","r");
	fscanf(btd,"%d",&size);
	dist = (int*)malloc((size*size)*sizeof(int));
	fclose(btd);
	return dist;
}
void Filldist(int* _dist)
{
	FILE* btd;
	int i=0;
	btd = fopen("/mnt/host/inbox.txt","r");
	fscanf(btd,"%d",&_dist[i]);
	while(_dist[i] !=999)
	{
		++i;
		fscanf(btd,"%d",&_dist[i]);
	}
}

